	public function preloadSounds(level:Number):Void
	{
		arraySound = new Array();
		for (var i:Number = 1; i <= 9; i++)
		{
			var s:Sound = new Sound();
			s.attachSound('assets.level-' + (level + 1) + '.sound-' + i + '.mp3');
			arraySound.push(s);
		}
	}
	
	public function playSoundIndex(sSoundIdx:Number):Void
