	public function gameOver(bWin:Boolean):Void
	{
		clearInterval(_nRun);
		Key.removeListener(gameScreen);
		if (getLevel(level) == "COMPLETE")
		{
			level = 0;
		}
		
		//life = gameScreen.life;

		if ((!bWin) && (life > 0))
		{
			startGame();
		}
		else
		{
			if (!bWin)
			{
				level = 0;
			}
			life = 4;
			this._main.setState("gameOver", [bWin, level]);
		}
	}
	
